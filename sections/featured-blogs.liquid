<div class="featured-blogs max-w-7xl mx-auto px-6 py-12">
  <!-- Section Heading -->
  <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">{{ section.settings.heading }}</h2>

  <!-- Blog Posts Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% assign selected_blog = blogs[section.settings.blog_handle] %}
    {% for article in selected_blog.articles limit: section.settings.post_limit %}
      <div class="blog-post bg-white rounded-lg shadow-lg overflow-hidden transition-transform transform hover:scale-105">
        {% if article.image %}
          <img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.title }}" class="w-full h-48 object-cover transition-transform duration-300 hover:scale-110">
        {% endif %}

        <!-- Blog Content -->
        <div class="p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-2">
            <a href="{{ article.url }}" class="hover:text-blue-600 transition-colors duration-300">{{ article.title }}</a>
          </h3>

          {% if article.author %}
            <p class="text-sm text-gray-500">by {{ article.author }}</p>
          {% endif %}

          <p class="text-gray-700 mt-2">{{ article.excerpt | strip_html | truncate: 100 }}</p>

          <a href="{{ article.url }}" class="inline-block mt-4 text-blue-500 hover:underline">Read more</a>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Blogs",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Latest Blog Posts"
    },
    {
      "type": "number",
      "id": "post_limit",
      "label": "Number of posts to show",
      "default": 3
    },
    {
      "type": "select",
      "id": "blog_handle",
      "label": "Select Blog",
      "options": [
        { "value": "news", "label": "News" },
        { "value": "blog1", "label": "Blog 1" },
        { "value": "blog2", "label": "Blog 2" }
      ],
      "default": "news"
    }
  ],
  "presets": [
    {
      "name": "Featured Blogs",
      "category": "Blog"
    }
  ]
}
{% endschema %}
