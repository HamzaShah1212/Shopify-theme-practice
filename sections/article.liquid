{% layout 'theme' %}
<div class="article-page container mx-auto px-4">
  <!-- Article Header -->
  <header class="article-header mb-4">
    <h1 class="text-3xl font-bold mb-2">{{ article.title }}</h1>
    {% if section.settings.show_author %}
      <p class="text-gray-600">By {{ article.author }}</p>
    {% endif %}
    {% if section.settings.show_date %}
      <p class="text-gray-600">{{ article.published_at | date: "%B %d, %Y" }}</p>
    {% endif %}
  </header>

  <!-- Image Slider (Alpine.js) -->
  <div x-data="{ activeSlide: 0 }" class="slider-container relative w-full max-w-2xl mx-auto mb-6">
    <div class="relative overflow-hidden rounded-lg">
      <!-- Slider Images -->
      <template x-for="(image, index) in images" :key="index">
        <div x-show="activeSlide === index" class="w-full">
          <img :src="image" alt="Clothing Image" class="w-full object-cover rounded-lg">
        </div>
      </template>
    </div>

    <!-- Slider Controls -->
    <button @click="activeSlide = (activeSlide > 0) ? activeSlide - 1 : images.length - 1" class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-blue-500 text-white px-2 py-1 rounded-full">
      &#8592;
    </button>
    <button @click="activeSlide = (activeSlide < images.length - 1) ? activeSlide + 1 : 0" class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-blue-500 text-white px-2 py-1 rounded-full">
      &#8594;
    </button>
  </div>

  <!-- Article Content -->
  <div class="article-content mb-4">
    {{ article.content }}
  </div>

  <!-- Article Tags -->
  {% if section.settings.show_tags and article.tags.size > 0 %}
    <div class="article-tags mb-4">
      <h3 class="text-lg font-semibold">Tags:</h3>
      <ul class="tags-list flex space-x-2">
        {% for tag in article.tags %}
          <li class="tag-item">
            <a href="{{ tag | url }}" class="text-blue-600 hover:underline">#{{ tag }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  <!-- Back to Blog Link -->
  <footer class="article-footer mt-6">
    <a href="{{ article.blog.url }}" class="text-blue-600 hover:underline">‚Üê Back to {{ article.blog.title }}</a>
  </footer>
</div>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('slider', () => ({
      images: [
        "/path/to/image1.jpg", // Replace with actual image URLs
        "/path/to/image2.jpg",
        "/path/to/image3.jpg"
      ],
      activeSlide: 0,
    }));
  });
</script>
