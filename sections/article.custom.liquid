<div class="article-container max-w-4xl mx-auto p-6 shadow-lg rounded-lg mt-10" style="background-color: {{ section.settings.background_color }}">
  <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ article.title }}</h1>
  
  {% if section.settings.show_author and article.author %}
    <p class="text-sm text-gray-500 mb-4">Written by {{ article.author }}{% if section.settings.show_date %} on {{ article.published_at | date: "%B %d, %Y" }}{% endif %}</p>
  {% endif %}

  {% if section.settings.show_featured_image and article.image %}
    <div class="mb-6">
      <img src="{{ article.image | img_url: 'master' }}" alt="{{ article.title }}" class="w-full rounded-lg">
    </div>
  {% endif %}

  <div class="content text-gray-800 leading-relaxed">
    {{ blogs.first }}
  </div>
</div>

{% schema %}
{
  "name": "Custom Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show publication date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_featured_image",
      "label": "Show featured image",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Custom Article",
      "category": "Article"
    }
  ]
}
{% endschema %}
